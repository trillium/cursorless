{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es2022"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.tsx",
    "next-env.d.ts",
    "../../typings/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../cheatsheet"
    },
    {
      "path": "../common"
    },
    {
      "path": "../test-case-component"
    }
  ],
  "exclude": ["node_modules"]
}
